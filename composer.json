{
    "name": "dw/content-pilot",
    "description": "Wordpress plugin to automatically create content",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "DW\\ContentPilot\\Core\\": "core/",
            "DW\\ContentPilot\\Lib\\": "lib/",
            "DW\\ContentPilot\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "developerswork",
            "email": "admin@thedevelopers.work"
        }
    ],
    "require": {
        "google/apiclient": "^2.12.1",
        "paquettg/php-html-parser": "^3.1"
    },
    "require-dev": {
        "overtrue/phplint": "*",
        "squizlabs/php_codesniffer": "*",
        "wp-coding-standards/wpcs": "*",
        "phpcompatibility/phpcompatibility-wp": "*",
        "phpunit/phpunit": "*",
        "vimeo/psalm": "*",
        "phpmd/phpmd": "*"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "pre-autoload-dump": "Google\\Task\\Composer::cleanup",
        "test": [
            "@lint",
            "@phpcs",
            "@psalm",
            "@phpmd",
            "@phpunit"
        ],
        "build": [
            "composer install --no-dev --optimize-autoloader",
            "@test"
        ],
        "release": [
            "@build",
            "zip -r content-pilot.zip . -x node_modules/**\/* .git/**\/* .github/**\/*"
        ],
        "lint": "phplint --no-cache core/ lib/ includes/",
        "phpcs": "phpcs --standard=WordPress core/ lib/ includes/",
        "phpcbf": "phpcbf --standard=WordPress core/ lib/ includes/",
        "phpunit": "phpunit",
        "psalm": "psalm",
        "phpmd": "phpmd core/ lib/ includes/ text cleancode,codesize,controversial,design,naming,unusedcode"
    },
    "extra": {
        "google/apiclient-services": [
            "YouTube"
        ]
    }
}